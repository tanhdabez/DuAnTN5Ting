@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<main id="main" data-aos="fade-up">
    <!-- Cart Details Section -->
    <section class="h-100 h-custom" style="background-color: #f8f9fa;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-start h-100">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-12 p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0">Shopping Cart</h1>
                                    </div>
                                    <hr class="my-4">

                                    <!-- Hiển thị nội dung giỏ hàng ở đây, hiện tại không có dữ liệu -->
                                    <div class="alert alert-info">Giỏ hàng của bạn trống.</div>

                                    <div class="pt-5 d-flex justify-content-between">
                                        <h6 class="mb-0">
                                            <a href="@Url.Action("IndexShop", "Home")" class="text-body">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i> Back to shop
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary -->
                <div class="col-lg-4">
                    <div class="card p-4" style="border-radius: 15px; background-color: #ffffff;">
                        <h3 class="fw-bold mb-5 mt-2">Summary</h3>
                        <hr class="my-4">
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="text-uppercase">Items</h5>
                        </div>

                        <hr class="my-4">
                        <div class="d-flex justify-content-between mb-5">
                            <h5 class="text-uppercase">Total Price</h5>
                        </div>

                        <!-- Checkout button -->
                        <button class="btn btn-dark btn-block btn-lg">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
