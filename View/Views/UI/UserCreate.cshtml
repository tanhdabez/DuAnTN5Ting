@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<main id="main" data-aos="fade-up">
    <section id="hero">
        <div class="hero-container">
            <a asp-action="IndexShop" class="hero-logo" data-aos="zoom-in">
                <img src="/img/hero-logo.png" alt="">
            </a>
        </div>
    </section><!-- End Hero -->
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Portfolio Details</h2>
                <ol>
                    <li><a asp-action="IndexShop">Home</a></li>
                    <li>Tạo tài khoản</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <h2>@ViewData["Title"]</h2>
                        <h4>User</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="UserCreate" method="post">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input name="Username" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input name="Password" class="form-control" type="password" />
                                    </div>
                                    <div class="form-group">
                                        <label>Số điện thoại (SDT)</label>
                                        <input name="SDT" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Địa chỉ (DiaChi)</label>
                                        <input name="DiaChi" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input name="Email" class="form-control" type="email" />
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="IndexShop" class="btn btn-primary">Back to Index</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->
</main><!-- End #main -->
<!-- ======= Footer ======= -->
<footer id="footer">
    <div class="footer-top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <a href="#header" class="scrollto footer-logo">
                        <img src="assets/img/hero-logo.png" alt="">
                    </a>
                    <h3>Knight</h3>
                </div>
            </div>
        </div>
    </div>
</footer><!-- End Footer -->
