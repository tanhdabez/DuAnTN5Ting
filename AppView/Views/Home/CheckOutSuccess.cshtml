@model AppData.ViewModels.SanPham.DonMuaSuccessViewModel
@{
    Layout = "_Layout";
}
<div class="container" style="width:930px">
    <div class="success-w">
        @if (Model.TongTien < 0)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-check" style="margin-right:5px"></i>Đặt hàng thất bại do chứa sản phẩm hết hàng
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check" style="margin-right:5px"></i>Đặt hàng thành công
            </div>
            <div class="row" style="margin-top:20px">
                <div class="col-lg-6" style="font-size:20px"><strong>Tên: </strong>@Model.Ten</div>
                <div class="col-lg-6" style="font-size:20px"><strong>Email: </strong>@Model.Email</div>
            </div>
            <div class="row">
                <div class="col-lg-6" style="font-size:20px"><strong>SĐT: </strong>@Model.SDT</div>
                <div class="col-lg-6" style="font-size:20px"><strong>Phương thức thanh toán: </strong>@Model.PhuongThucThanhToan</div>
            </div>
            <div class="row">
                <div class="col-lg-6" style="font-size:20px"><strong>Tổng tiền: </strong>@Model.TongTien.ToString("n0") VND</div>
                <div class="col-lg-6" style="font-size:20px"><strong>Mã voucher: </strong>@Model.MaVoucher</div>
            </div>
            @if (Model.Login)
            {
                <div class="row">
                    <div class="col-lg-6" style="font-size:20px"><strong>Điểm được tích: </strong>@Model.DiemTich</div>
                    <div class="col-lg-6" style="font-size:20px"><strong>Điểm sử dụng: </strong>@Model.DiemSuDung</div>
                </div>
            }
            <div class="row">
                <div class="col-lg-12" style="font-size:20px"><strong>Địa chỉ: </strong>@Model.DiaChi</div>
            </div>
            <div class="row">
                <div class="col-lg-12" style="font-size:20px"><strong>Ghi chú: </strong>@Model.GhiChu</div>
            </div>
            <div class="shopping__cart__table" style="margin-top:20px">
                <table style="width:100%" class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th style="text-align:center">Giá bán</th>
                            <th style="text-align:center">Số lượng</th>
                            <th style="text-align:center">Tổng cộng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GioHangs)
                        {
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img style="height:60px;width:50px" src="/img/product/@item.Anh" alt="">
                                    </div>
                                    <div class="product__cart__item__text" style="padding-top:0px!important">
                                        <h6>@item.Ten</h6>
                                        <h5>@item.MauSac/@item.KichCo</h5>
                                    </div>
                                </td>
                                <td class="cart__price" style="text-align:center">@item.DonGia.Value.ToString("n0") VND</td>
                                <td class="quantity__item" style="text-align:center;font-weight:700">@item.SoLuong</td>
                                <td class="cart__price" style="text-align:center">@((item.DonGia * item.SoLuong).Value.ToString("n0")) VND</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-end">
                <button onclick="location.href='/Admin/QuanLyHoaDon/ExportPDF/@Model.ID'" class="btn btn-secondary" style="margin-right:5px">Xuất PDF</button>
                <a asp-action="Index" class="btn btn-primary">Quay về trang chủ</a>
            </div>
        }        
    </div>
</div>