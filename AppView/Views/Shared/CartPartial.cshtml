@{
    string? count = TempData.Peek("SoLuong") as string;
    int number = 0;
    bool isNumber = int.TryParse(count, out number);
    string displayCount = isNumber && number > 99 ? "99+" : count;
}
<a href="@Url.Action("ShoppingCart","Home")">
    <div style="position: relative; display: inline-block;">
        <i class='bi bi-bag' style='font-size:20px;color:black'></i>
        <div id="tongsoluong" style="position: absolute; top: 0; left: 100%; margin: -5px; width: 20px; height: 20px; background-color: red; color: white; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
            @displayCount
        </div>
    </div>
</a>
