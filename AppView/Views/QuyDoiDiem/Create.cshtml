@model AppData.Models.QuyDoiDiem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

<h1>Thêm quy đổi điểm</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
           @* <div class="form-group">
                <label  class="control-label">Số Điểm </label>
                <input asp-for="SoDiem" class="form-control" />
                <span asp-validation-for="SoDiem" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label  class="control-label">Tỉ lệ tích điểm</label>
                <input asp-for="TiLeTichDiem" class="form-control" />
                <span  class="text-danger">@ViewData["TiLeTichDiem"]</span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tỉ lệ tiêu điểm</label>
                <input asp-for="TiLeTieuDiem" class="form-control" />
                <span class="text-danger">@ViewData["TiLeTieuDiem"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
               
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="trangthai" value="1" asp-for="TrangThai">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Chỉ tích điểm hoặc tiêu điểm
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="trangthai" value="2" asp-for="TrangThai">
                    <label class="form-check-label" for="flexRadioDefault3">
                        Vừa tích điểm và vừa tiêu điểm
                    </label>
                </div>
            </div>
            <span  class="text-danger">@ViewData["TrangThai"]</span>
            <div class="form-group">
                <input type="submit" value="Thêm quy đổi điểm" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />
<button class="btn btn-primary">
    <a asp-action="GetAllQuyDoiDiem" style="color:white;">Quay lại</a>
</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
