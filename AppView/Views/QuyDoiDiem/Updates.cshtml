@model AppData.Models.QuyDoiDiem

@{
    ViewData["Title"] = "Updates";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

<h1>Sửa quy đổi điểm </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Updates">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label class="control-label">Số Điểm </label>
                <input asp-for="SoDiem" class="form-control" />
                <span asp-validation-for="SoDiem" class="text-danger"></span>
            </div>*@
            @*<div class="form-group">
                <label class="control-label">Tỉ Lệ Tích Điểm</label>
                <input asp-for="TiLeTichDiem" class="form-control" />
                <span asp-validation-for="TiLeTichDiem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tỉ Lệ Tiêu Điểm</label>
                <input asp-for="TiLeTieuDiem" class="form-control" />
                <span asp-validation-for="TiLeTieuDiem" class="text-danger"></span>
            </div>*@
            @if(Model.TrangThai==0){
                <div class="form-group">
                    <label class="control-label">Trạng thái</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="0" @(Model.TrangThai == 0 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Không sử dụng
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="1" @(Model.TrangThai == 1 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Chỉ sử dụng tích điểm hoặc tiêu điểm
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="2" @(Model.TrangThai == 2 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault3">
                            Vừa tiêu điểm, vừa tích điểm
                        </label>
                    </div>
                </div>
            }
            else{
                <div class="form-group">
                    <label class="control-label">Trạng thái</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="0" @(Model.TrangThai == 0 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Không sử dụng
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="1" @(Model.TrangThai == 1 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Chỉ sử dụng tích điểm hoặc tiêu điểm
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="trangthai" value="2" @(Model.TrangThai == 2 ? "checked" : "")>
                        <label class="form-check-label" for="flexRadioDefault3">
                            Vừa tiêu điểm, vừa tích điểm
                        </label>
                    </div>
                </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Sửa quy đổi điểm" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />
<button class="btn btn-primary">
    <a asp-action="GetAllQuyDoiDiem" style="color:white;">Quay lại</a>
</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    <script>
            // JavaScript để quản lý trạng thái của radio buttons
            document.addEventListener("DOMContentLoaded", function () {
                var TrangThai = @Model.TrangThai;

                document.querySelector('input[name="trangthai"][value="' + TrangThai + '"]').checked = true;
            });
        </script>